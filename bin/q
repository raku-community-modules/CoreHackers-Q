#!/usr/bin/env perl6

use lib $*PROGRAM.sibling: '../lib';
use CoreHackers::Q;

my $out := (%*ENV<COREHACKERS_Q_FILE> // 'out.html').IO.open: :w;

multi MAIN('a', *@args) {
    my $*OUT := $out;
    q-run( @args );
}

multi MAIN('o', *@args) {
    my $*OUT := $out;
    q-run( @args, :opt );
}

multi MAIN('z', *@args) {
    zero-run( @args, :opt );
}
